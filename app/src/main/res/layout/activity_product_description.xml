<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cae6ca"
    tools:context=".ProductDescriptionActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/product_description_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/product_description_text"
                android:paddingVertical="5dp"
                android:background="@color/colorPrimary"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:layout_weight="0.035"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:fontFamily="@font/poppins_medium">
            </TextView>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#cae6ca"
        android:layout_weight="0.9"
        android:paddingVertical="20dp"
        android:paddingHorizontal="20dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/btn_rounded"
            android:layout_gravity="center_horizontal"
            android:paddingVertical="40dp"
            android:layout_weight="0.8"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/prodImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:maxWidth="200dp"
                android:layout_gravity="center"
                android:maxHeight="200dp"
                android:scaleType="fitXY"
                android:src="@drawable/item_image1">
            </ImageView>

            <TextView
                android:id="@+id/prodName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="dmvnfmvnfnfn  dcdvfvb"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:textColor="#FFFFFF"
                android:textAllCaps="true"
                android:fontFamily="@font/poppins_medium"
                android:textAlignment="center"
                android:layout_gravity="center"></TextView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/prodPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rs.499/-"
                    android:textSize="20sp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/poppins_medium"
                    android:textAlignment="textEnd"
                    android:layout_gravity="center"
                    android:paddingRight="10dp"
                    tools:ignore="RtlCompat">
                </TextView>

                <TextView
                    android:id="@+id/prodWeight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10Kg"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#FF0000"
                    android:fontFamily="@font/poppins_medium"
                    android:textAlignment="textStart"
                    android:layout_gravity="center"
                    android:paddingLeft="10dp"
                    tools:ignore="RtlCompat">
                </TextView>
            </LinearLayout>

            <TextView
                android:id="@+id/prodDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="bvbfvnbcbvnfbvbdbcf"
                android:maxWidth="1dp"
                android:textSize="17sp"
                android:textColor="#FFFFFF"
                android:layout_marginTop="7dp"
                android:textAlignment="center"
                android:fontFamily="@font/poppins_light"
                android:layout_gravity="center"
                android:paddingHorizontal="20dp">
            </TextView>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_centerInParent="true">

            <ImageButton
                android:id="@+id/decreaseQuantity"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:backgroundTint="@color/colorPrimary"
                android:background="@drawable/btn_rounded"
                android:layout_centerVertical="true"
                android:src="@drawable/remove_item">
            </ImageButton>
            <TextView
                android:id="@+id/quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="1"
                android:layout_centerVertical="true"
                android:textColor="#000000"
                android:textSize="27sp">
            </TextView>
            <ImageButton
                android:id="@+id/increaseQuantity"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:backgroundTint="@color/colorPrimary"
                android:background="@drawable/btn_rounded"
                android:layout_centerVertical="true"
                android:src="@drawable/add_item">
            </ImageButton>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="20dp"
            android:paddingHorizontal="12dp"
            android:layout_weight="0.2"
            android:orientation="horizontal">

                <Button
                    android:id="@+id/viewCart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/viewCart"
                    android:textSize="19sp"
                    android:textAllCaps="false"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/btn_rounded"

                    android:fontFamily="@font/poppins_medium"
                    android:textColor="#FFFFFF"
                    android:layout_weight="0.5"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="5dp">
                </Button>

                <Button
                    android:id="@+id/buyNow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/buyNow"
                    android:textAllCaps="false"
                    android:background="@drawable/btn_rounded"
                    android:layout_marginRight="12dp"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:layout_weight="0.5"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="5dp">

                </Button>
        </LinearLayout>


    </LinearLayout>

        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>