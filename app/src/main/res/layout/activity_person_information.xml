<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cae6ca"
    tools:context=".PersonInformationActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/personinformation"
            android:layout_marginTop="30dp"
            android:layout_weight="0.2"
            android:paddingHorizontal="20dp"
            android:background="#cae6ca">

        </ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_weight="0.05"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Person Information"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/poppins_medium"
                android:textSize="20sp">

            </TextView>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:layout_gravity="center_vertical"
                android:src="@drawable/edit_person_information">
            </ImageView>
        </LinearLayout>

        <EditText
            android:id="@+id/info_fullName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="13dp"
            android:paddingVertical="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/person_information"
            android:textAlignment="center"
            android:layout_weight="0.05"
            android:fontFamily="@font/poppins_medium"
            android:hint="Your Full Name">
        </EditText>

        <EditText
            android:id="@+id/info_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="13dp"
            android:paddingVertical="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/person_information"
            android:textAlignment="center"
            android:layout_weight="0.05"
            android:fontFamily="@font/poppins_medium"
            android:hint="Enter Your Address">
        </EditText>

        <EditText
            android:id="@+id/info_country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="13dp"
            android:paddingVertical="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/person_information"
            android:textAlignment="center"
            android:layout_weight="0.05"
            android:fontFamily="@font/poppins_medium"
            android:hint="Country">
        </EditText>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/continueBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Continue"
                android:layout_centerInParent="true"
                android:textSize="20sp"
                android:layout_gravity="center_vertical"
                android:textAllCaps="false"
                android:paddingLeft="20dp"
                android:layout_marginVertical="20dp"
                android:background="@drawable/btn_rounded"
                android:fontFamily="@font/poppins_medium"
                android:textStyle="bold"
                android:drawableRight="@drawable/small_arrow"
                android:textColor="#FFFFFF">
            </Button>

        </RelativeLayout>

    </LinearLayout>

    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>