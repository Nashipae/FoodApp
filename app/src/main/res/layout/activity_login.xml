<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Meadberry_Farms.example.foodapp.LoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/linearLayout11"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/app_logo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:layout_weight="0.07"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:srcCompat="@drawable/logo" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:orientation="horizontal"
                android:layout_marginLeft="13dp"
                android:layout_weight="0.01"
                android:layout_marginRight="13dp">

                <Button
                    android:id="@+id/signIn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:paddingTop="10dp"
                    android:background="@drawable/bottom_underline"
                    android:text="@string/signIn"
                    android:fontFamily="@font/poppins_bold"
                    android:textAllCaps="false"
                    android:textColor="@color/colorPrimary"
                    android:textSize="25dp"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    app:layout_constraintStart_toStartOf="parent" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="13dp"
                android:background="@drawable/bottom_underline_gray"
                android:orientation="horizontal"
                android:layout_weight="0"
                tools:layout_editor_absoluteX="12dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:background="#FFFFFF"
                    android:src="@drawable/user"></ImageView>

                <EditText
                    android:id="@+id/phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:background="@null"
                    android:hint="@string/phone"
                    android:fontFamily="@font/poppins_medium"
                    android:padding="5dp"
                    android:inputType="phone"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20sp">

                </EditText>
            </LinearLayout>

            <LinearLayout

                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="13dp"
                android:layout_weight="0"
                android:layout_marginTop="20dp"
                android:background="@drawable/bottom_underline_gray"
                android:orientation="horizontal"
                tools:layout_editor_absoluteX="10dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="22dp"
                    android:src="@drawable/password"></ImageView>

                <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:ems="10"
                    android:hint="@string/password"
                    android:fontFamily="@font/poppins_medium"
                    android:inputType="textPassword"
                    android:padding="5dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20sp" />
                <Button
                    android:id="@+id/showHideBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="SHOW"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_gravity="center"
                    android:textSize="13sp"
                    android:padding="8sp"
                    android:background="@null"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:textColor="@color/colorPrimary">

                </Button>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_weight="0"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:gravity="center_vertical">

                    <CheckBox
                        android:id="@+id/save_login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="30dp"
                        android:gravity="center_vertical"
                        android:text="@string/save_login"
                        android:fontFamily="@font/poppins_medium"

                        android:textColor="@color/colorAccent"
                        android:textSize="15dp"
                        android:textStyle="bold"></CheckBox>

                    <Button
                        android:id="@+id/forgotPassword"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="30dp"
                        android:background="@null"
                        android:text="@string/forgotPassword"
                        android:fontFamily="@font/poppins_medium"

                        android:textAllCaps="false"
                        android:textColor="@color/colorAccent"
                        android:textStyle="bold"></Button>
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="10">

                <Button
                    android:id="@+id/loginBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="45dp"
                    android:width="300dp"
                    android:background="@drawable/btn_rounded"
                    android:text="@string/loginBtn"
                    android:fontFamily="@font/poppins_bold"
                    android:textAllCaps="false"
                    android:textColor="#ffffff"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:textSize="30sp"
                    android:drawableRight="@drawable/login_btn_arrow" />

            </RelativeLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingHorizontal="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="0.02"
                app:layout_constraintTop_toBottomOf="@+id/loginBtn">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/textView"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16dp" />

                <Button
                    android:id="@+id/signupBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:background="@null"
                    android:text="@string/signupBtn"
                    android:fontFamily="@font/poppins_medium"
                    android:textAllCaps="false"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16dp"
                    android:textStyle="bold"></Button>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingHorizontal="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_weight="0.02"
                android:layout_marginBottom="30dp">

                <TextView
                    android:id="@+id/admin_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/admin_text"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <Button
                    android:id="@+id/adminLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:background="@null"
                    android:text="@string/adminLogin"
                    android:fontFamily="@font/poppins_medium"
                    android:textAllCaps="false"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16dp"
                    android:textStyle="bold"></Button>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>









</androidx.constraintlayout.widget.ConstraintLayout>